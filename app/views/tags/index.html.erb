<%= provide :title, "#{sort_cn(params[:sort])}标签" %>

<div class="row">
  <div class="span12">
    <ul class="sort mb0 nav nav-tabs">
      <li <%= 'class=active' if params[:sort].blank? || params[:sort] == "hottest" %>><a href="<%= tags_path(:sort => "hottest") %>">最热</a></li>
      <li <%= 'class=active' if params[:sort] == "latest" %>><a href="<%= tags_path(:sort => "latest") %>">最新</a></li>
      <li <%= 'class=active' if params[:sort] == "comment" %>><a href="<%= tags_path(:sort => "comment") %>">最多评论</a></li>
    </ul>

    <div class="row tags">
      <% @tags.each do |tag| %>
      <div class="box span3 mb10 mt10">
        <div class="tag">
            <div class="mb5"><a href="<%= tag_path(tag.name) %>"><%= tag.name %></a></div>
            <div class="fs12 muted">
              <a href="" class="muted pull-right"><%= tag.taggings.count %>个链接</a>
              <%= link_do_like(tag, "关注") %>
              -
              <span>被浏览<%= tag.views %>次</span>
            </div>
        </div>
      </div>
      <% end %>
    </div>

    <div class="text-center">
      <%= paginate @tags, :theme => 'bootstrap', :remote => true %>
    </div>
  </div>
</div>