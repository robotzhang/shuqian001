<div class="box padding20" style="width: 500px; margin: auto;">
    <h2>注册</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="mb10"><%= f.label :username, "名号" %>
      <%= f.text_field :username, :autofocus => true, class: "form-input input-block-level" %></div>

      <div class="mb10"><%= f.label :email, "邮箱" %>
      <%= f.email_field :email, :autofocus => true, class: "form-input input-block-level" %></div>

      <div class="mb10"><%= f.label :password, "密码" %>
      <%= f.password_field :password, class: "form-input input-block-level" %></div>

      <div class="mb20"><%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation, class: "form-input input-block-level" %></div>

      <div><%= f.submit "注册", class: "btn btn-success btn-block" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
