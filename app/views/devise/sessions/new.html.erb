<div class="box padding20" style="width: 500px; margin: auto;">
    <h2>登录</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <input type="hidden" name="back" value="<%= params[:back] || request.url %>" />
      <div>
        <%= f.label :email, "邮件" %>
        <%= f.email_field :email, :autofocus => true, id: "form-input", class: "input-block-level form-input" %>
      </div>

      <div>
        <%= f.label :password, "密码" %>
        <%= f.password_field :password, class: "form-input input-block-level" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <label class="checkbox mb20">
          <%= f.check_box :remember_me %>  自动登陆
        </label>
      <% end -%>

      <div><%= f.submit "登录", class: "btn btn-success btn-block" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
