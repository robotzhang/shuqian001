<% if @link.errors.any? %>
$('#new_link').replaceWith('<%= j render :partial => "links/form", locals: { link: @link } %>');
<% else %>
$('<%= j render :partial => "links/item", locals: { link: @link } %>').appendTo($('.links'));
$('#create_link_error').html('').hide();
$('#new_link')[0].reset();
<% end %>