<%= form_for @collection do |f| %>
    <% if @collection.errors.any? %>
    <div class="alert alert-error">
      <%= @collection.errors.full_messages.join('<br>') %>
    </div>
    <% end %>
  <div>
    <%= f.label :title, "合集标题" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description, "补充描述" %>
    <%= f.text_area :description, :rows => 2%>
  </div>
  <div>
    <label>标签 <small class='muted'>多个标签用","隔开</small></label>
    <%= f.text_field :tag_list %>
  </div>
  <div>
    <%= f.submit "好了", :class => "btn" %>
  </div>
<% end %>