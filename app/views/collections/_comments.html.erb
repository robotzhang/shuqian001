<% comments.each do |comment| %>
  <div>
    <div class="head-pic"><img src="<%= comment.user.avatar %>"/></div>
    <div class="muted">
      <small>
        <%= comment.user.username %>
        <%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      </small>
    </div>
    <div>
      <%= comment.comment %>
    </div>
  </div>
<% end %>