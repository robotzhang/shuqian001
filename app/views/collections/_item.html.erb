<div class="pull-left">
    <%= form_tag votes_path(collection.class.to_s.underscore, collection.id), :method => "post", :remote => true do %>
       <input type="hidden" name="vote[vote]" value="up"/>
       <button type="submit" title="好东西，赞"><i class="icon-thumbs-up"></i>1</button>
    <% end %>

    <%= form_tag votes_path(collection.class.to_s.underscore, collection.id), :method => "post", :remote => true do %>
        <input type="hidden" name="vote[vote]" value="down"/>
        <button type="submit" title="坑爹"><i class="icon-thumbs-down"></i>1</button>
    <% end %>
</div>

<div class="pull-left">
  <a href="<%= collection_path(collection) %>"><%= collection.title %></a>
  <% if can?(:edit, collection) %>
      <a href="<%= edit_collection_path(collection) %>" title="编辑"><i class="icon-edit"></i></a>
  <% end %>
</div>
<div class="clearfix"></div>