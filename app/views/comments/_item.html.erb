<% cache([comment]) do %>
<% floor = comment_counter + 1 #+ ((@page - 1) * Reply.per_page) %>
<div class="comment">
  <div class="head-pic"><img width="45" height="45" src="<%= comment.user.avatar.normal %>"/></div>
  <div class="body-head">
    <div class="pull-right">
      <!--<a href="javascript:void(0);" class="muted">回复</a>-->
      #<%= floor %>楼
    </div>
    <a href="<%= user_path(comment.user) %>" title="<%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %>">
      <%= comment.user.username %>
    </a>
    <%= time_ago_in_words(comment.created_at) %>
    <%= link_do_like(comment, "赞") %>
  </div>
  <div class="body">
    <%= comment.comment %>
  </div>
</div>
<% end %>