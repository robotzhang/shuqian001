<div class="row">
  <div class="span3">
    <div>
      <img src="<%= @user.avatar.big %>" />
    </div>
    <% if can? :edit, @user %>
    <div>
      <a href="javascript:void(0);">修改头像</a>
      <%= form_for @user, html: { multipart: true } do |f| %>
          <%= f.file_field :avatar %>
          <%= f.submit "上传" %>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="span9">
    <div class="mb10 clearfix" style="border-bottom: #dadada 1px solid; padding-bottom: 10px;">
      <%= @user.username %>的合集
      <a href="<%= new_collection_path %>" class="btn btn-small pull-right">
        <i class="icon-plus-sign"></i>
        添加新合集
      </a>
    </div>
    <ul class="collections">
      <% @user.collections.each do |collection| %>
      <li>
        <%= render partial: "collections/item", locals: { collection: collection } %>
        <small class="muted">更新于：<%= collection.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></small>
        <div class="pull-right">
          <small class="muted">
            <a target="_blank" class="muted" href="<%= collection_path(collection) %>">
              <%= collection.comments.size %>
            </a> 条评论
            <a target="_blank" class="muted" href="<%= collection_path(collection) %>">
              <%= collection.links.size %>
            </a> 条链接
          </small>
        </div>
      </li>
      <% end %>
    </ul>

    <div class="board">
        <div class="title"><%= @user.username %>的留言板</div>
        <ul id="comments" class="comments" style="display: block;">
          <% @user.comments.each do |comment| %>
            <li>
              <div class="head">
                <a href="<%= user_path(comment.user) %>">
                  <img src="<%= comment.user.avatar.normal %>" />
                </a>
              </div>
              <div class="comment">
                <div>
                  <small class="muted">
                    <a href="<%= user_path(comment.user) %>"><%= comment.user.username %></a>
                    <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %>
                  </small>
                </div>
                <div><%= comment.comment %></div>
              </div>
              <div class="clearfix"></div>
            </li>
          <% end %>
        </ul>
        <div>
          <%= render :partial => 'comments/form', :locals => {:comment => @comment} %>
        </div>
    </div>
  </div>
</div>