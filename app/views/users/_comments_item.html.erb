<div class="head">
  <a href="<%= user_path(comment.user) %>">
    <img src="<%= comment.user.avatar %>" />
  </a>
</div>
<div class="comment">
  <div>
    <small class="muted">
      <a href="<%= user_path(comment.user) %>"><%= comment.user.username %></a>
      <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %>
    </small>
  </div>
  <div><%= comment.comment %></div>
</div>
<div class="clearfix"></div>